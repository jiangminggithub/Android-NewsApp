<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:radius="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/news_item_two_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingExtra="3dp"
            android:text="毛克疾：印度优秀工程师那么多，为什么是中国抓住了全球化机会毛克疾：印度优秀工程师那么多，为什么是中国抓住了全球化机会毛克疾：印度优秀工程师那么多，为什么是中国抓住了全球化机会毛克疾：印度优秀工程师那么多，为什么是中国抓住了全球化机会"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.jm.news.customview.MImageViewBase
                android:id="@+id/news_item_two_img_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="2dp"
                android:scaleType="fitXY"
                radius:left_bottom_radius="5dp"
                radius:left_top_radius="5dp"
                android:src="@drawable/ic_launcher_background" />

            <com.jm.news.customview.MImageViewBase
                android:id="@+id/news_item_two_img_rignt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="2dp"
                android:scaleType="fitXY"
                radius:right_bottom_radius="5dp"
                radius:right_top_radius="5dp"
                android:src="@drawable/ic_launcher_background" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/news_item_two_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="头条" />

            <TextView
                android:id="@+id/news_item_two_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2017-05-27 15:01:10" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
