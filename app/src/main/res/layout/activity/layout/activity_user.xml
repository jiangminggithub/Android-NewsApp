<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:radius="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_user_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F6"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <include layout="@layout/layout_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            style="@style/app_splitEvents_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    android:id="@+id/ll_user_header"
                    style="@style/single_layout">

                    <com.jm.news.customview.MCircleImageView
                        android:id="@+id/miv_user_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/icon_user" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        style="@style/user_text_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        tools:text="userName" />

                    <com.jm.news.customview.MImageView
                        android:id="@+id/miv_user_qrcode"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icon_qrcode"
                        radius:left_bottom_radius="5dp"
                        radius:left_top_radius="5dp"
                        radius:right_bottom_radius="5dp"
                        radius:right_top_radius="5dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    android:id="@+id/ll_user_autograph"
                    style="@style/top_layout">

                    <TextView
                        style="@style/user_text_category"
                        android:text="@string/user_autograph" />

                    <TextView
                        android:id="@+id/tv_user_autograph"
                        style="@style/user_text_info"
                        tools:text="user autograph" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout
                    android:id="@+id/ll_user_nickname"
                    style="@style/mid_layout">

                    <TextView
                        style="@style/user_text_category"
                        android:text="@string/user_nickname" />

                    <TextView
                        android:id="@+id/tv_user_nickname"
                        style="@style/user_text_info"
                        tools:text="User nickname" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout
                    android:id="@+id/ll_user_sex"
                    style="@style/mid_layout">

                    <TextView
                        style="@style/user_text_category"
                        android:text="@string/user_sex" />

                    <TextView
                        android:id="@+id/tv_user_sex"
                        style="@style/user_text_info"
                        tools:text="men" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout
                    android:id="@+id/ll_user_address"
                    style="@style/mid_layout">

                    <TextView
                        style="@style/user_text_category"
                        android:text="@string/user_address" />

                    <TextView
                        android:id="@+id/tv_user_address"
                        style="@style/user_text_info"
                        tools:text="shanghai" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout
                    android:id="@+id/ll_user_phone"
                    style="@style/mid_layout">

                    <TextView
                        style="@style/user_text_category"
                        android:text="@string/user_phone" />

                    <TextView
                        android:id="@+id/tv_user_Phone"
                        style="@style/user_text_info"
                        tools:text="18895361267" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout
                    android:id="@+id/ll_user_hobby"
                    style="@style/mid_layout">

                    <TextView
                        style="@style/user_text_category"
                        android:text="@string/user_hobby" />

                    <TextView
                        android:id="@+id/tv_user_hobby"
                        style="@style/user_text_info"
                        tools:text="User hobby" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout
                    android:id="@+id/ll_user_profile"
                    style="@style/mid_layout">

                    <TextView
                        style="@style/user_text_category"
                        android:text="@string/user_profile" />

                    <TextView
                        android:id="@+id/tv_user_profile"
                        style="@style/user_text_info"
                        tools:text="user profile" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout
                    android:id="@+id/ll_user_more"
                    style="@style/bottom_layout">

                    <TextView
                        style="@style/user_text_category"
                        android:layout_weight="1"
                        android:text="@string/user_more" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/wrap_layout"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:id="@+id/ll_user_account"
                    style="@style/single_layout">

                    <TextView
                        style="@style/user_text_category"
                        android:layout_weight="1"
                        android:text="@string/user_account" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>