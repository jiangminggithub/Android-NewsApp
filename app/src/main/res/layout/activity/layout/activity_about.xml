<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@mipmap/icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_about_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    tool:text="1.0.0" />
            </LinearLayout>

            <TextView
                style="@style/about_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_specifications_title" />

            <TextView
                style="@style/about_context_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_specifications_content" />

            <TextView
                style="@style/about_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_right_title" />

            <TextView
                style="@style/about_context_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_right_content" />

            <TextView
                style="@style/about_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_service_title" />

            <TextView
                style="@style/about_context_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_service_content_one" />

            <TextView
                style="@style/about_context_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_service_content_two" />

            <TextView
                style="@style/about_context_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_service_content_three" />


            <TextView
                style="@style/about_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_gratitude_title" />

            <TextView
                style="@style/about_context_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_gratitude_content_one" />

            <TextView
                style="@style/about_context_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_gratitude_content_two" />

            <TextView
                style="@style/about_context_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_gratitude_content_three" />

            <TextView
                style="@style/about_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_support_title" />

            <TextView
                android:id="@+id/tv_about_github"
                style="@style/about_context_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_support_content_one" />

            <TextView
                android:id="@+id/tv_about_download"
                style="@style/about_context_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_support_content_two" />

            <TextView
                android:id="@+id/tv_about_email"
                style="@style/about_context_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_support_content_three" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/about_copyright"
                android:textSize="12dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>